/* pages/bookshelf/bookshelf.wxss */
.bookShelf{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  /* justify-content: space-around; */
  width: 100vw;
  box-sizing: border-box;
  padding-right: 0;
  padding-top: 0;
}
.bookShelf .book{
  width: 30%;
  height: 33vh;
  margin-right: 20rpx;
  margin-top:20rpx; 
}
.bookShelf .book image:hover{
  box-shadow: 12rpx 12rpx 30rpx  black;
}
/* .bookShelf view:nth-child(2+2n){
  color: red
  
} */
 .bookShelf .book image{
  width: 100%;
  height: 80%;
box-shadow: 6rpx 6rpx 10rpx  black;
}
 .bookShelf .book text{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  text-align: center;
}